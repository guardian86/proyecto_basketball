<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ScrollView
        android:id="@+id/inicio_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#7FD3FA"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Basket App"
                    android:textSize="50dp"></TextView>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/equipoUno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equipo Uno"
                    android:textColor="#0E0E0E"
                    android:textSize="30dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textSize="30dp"></TextView>

                <TextView
                    android:id="@+id/puntajeUno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="#121111"
                    android:textSize="30dp"></TextView>
            </LinearLayout>

            <Button
                android:id="@+id/send_1"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="1"
                android:textColor="#000000"
                android:textStyle="bold"
                app:backgroundTint="@color/purple_700" />

            <Button
                android:id="@+id/send_2"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="2"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:backgroundTint="#FF7000" />

            <Button
                android:id="@+id/send_3"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="3"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:backgroundTint="#E80909" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/equipoDos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equipo Dos"
                    android:textColor="#0C0C0C"
                    android:textSize="30dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textSize="30dp"></TextView>

                <TextView
                    android:id="@+id/puntajeDos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="#100F0F"
                    android:textSize="30dp"></TextView>

            </LinearLayout>

            <Button
                android:id="@+id/send_s1"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="1"
                android:textColor="#000000"
                android:textStyle="bold"
                app:backgroundTint="@color/purple_700" />

            <Button
                android:id="@+id/send_s2"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="2"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:backgroundTint="#FF7000" />

            <Button
                android:id="@+id/send_s3"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="3"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:backgroundTint="#E80909" />

            <Button
                android:id="@+id/send_reset"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Finalizar"
                android:textColor="#7FD3FA"
                android:textStyle="bold"
                app:backgroundTint="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>